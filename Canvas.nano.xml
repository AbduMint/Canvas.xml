/*]]>*/</style>

<b:if cond='data:blog.pageType == "index"'>
<style type='text/css'>/*<![CDATA[*/
	/*-- 
	=> INDEX 
	--*/
/*]]>*/</style>
<b:else/>
<style type='text/css'>/*<![CDATA[*/
	/*-- 
	=> TODO MENOS INDEX 
	--*/
/*]]>*/</style>
</b:if>

<b:if cond='data:blog.pageType == "item"'>
<style type='text/css'>/*<![CDATA[*/
	/*-- 
	=> ENTRADAS
	--*/
/*]]>*/</style>
</b:if>

</head>

<body>

<b:if cond='data:blog.pageType == "error_page"'><!-- Error -->
<!-- Tu error 404 -->
<b:else/>

<!-- Entradas -->
<b:section id='Blog'>
  <b:widget id='Blog1' locked='true' title='Entradas del blog' type='Blog' version='1' visible='true'>
    <b:includable id='main' var='top'>

		<b:if cond='data:blog.pageType == "index"'>
      		<b:loop values='data:posts' var='post'>
        		<b:include data='post' name='post'/><!-- insertamos entradas -->
			</b:loop>
			<b:include name='nextprev'/>
		<b:else/>
			<b:loop values='data:posts' var='post'>
        		<b:include data='post' name='post'/><!-- insertamos entradas -->
        		
				<!-- insertamos Comentarios -->
				<div class='comentarios'>
				<b:if cond='data:post.allowComments'><!-- Si los comentarios estan permitidos -->
                  	<h3>Comentarios</h3>
          			<b:include name='comment-disqus'/><!-- elige entre facebook o disqus -->
				<b:else/><!-- Caso contrario -->
                    <span class='info'>Esta entrada se encuentra cerrada y no permite comentarios</span>
				</b:if>
          		</div>
          		
			</b:loop>
		</b:if>

    </b:includable>
    <b:includable id='backlinkDeleteIcon' var='backlink'><!--Vacío--></b:includable>
    <b:includable id='backlinks' var='post'><!--Vacío--></b:includable>
	<b:includable id='comment-disqus'>
		<div id='disqus_thread'/>
		<script type='text/javascript'>
		var c = "<data:blog.canonicalUrl/>",  
		//<![CDATA[
    		b = document.querySelector("#disqus_thread"),
    			disqus_config = function() {
        			this.page.url = c;
        			this.page.identifier = c
    			};
			(function() {
				var a = document,
					b = a.createElement("script");
    				b.src = "//[Shortname_DISQUS].disqus.com/embed.js";
    				b.setAttribute("data-timestamp", +new Date);
    				(a.head || a.body).appendChild(b)
			})();
		//]]>
		</script>
		<noscript><span class='info'>T-T Lo sentimos, los comentarios requieren javascript</span></noscript>
	</b:includable>
	<b:includable id='comment-facebook'>
		<div id='disqus_thread'/>
      	<div class="fb-comments" expr:data-href="data:blog.canonicalUrl" data-numposts="10"/>
		<noscript><span class='info'>T-T Lo sentimos, los comentarios requieren javascript</span></noscript>
	</b:includable>
    <b:includable id='comment-form' var='post'><!--Vacío--></b:includable>
    <b:includable id='commentDeleteIcon' var='comment'><!--Vacío--></b:includable>
    <b:includable id='comment_count_picker' var='post'><!--Vacío--></b:includable>
    <b:includable id='comment_picker' var='post'><!--Vacío--></b:includable>
    <b:includable id='comments' var='post'><!--Vacío--></b:includable>
    <b:includable id='feedLinks'><!--Vacío--></b:includable>
    <b:includable id='feedLinksBody' var='links'><!--Vacío--></b:includable>
    <b:includable id='iframe_comments' var='post'><!--Vacío--></b:includable>
    <b:includable id='mobile-main' var='top'><!--Vacío--></b:includable>
    <b:includable id='mobile-nextprev'><!-- Vacío--></b:includable>
    <b:includable id='mobile-post' var='post'><!-- Vacío--></b:includable>
    <b:includable id='nextprev'>
		<div class='blog-pager' id='blog-pager'>
			<b:if cond='data:newerPageUrl'><a class='newer-link' expr:href='data:newerPageUrl' expr:title='data:newerPageTitle'>Anterior</a></b:if>
			<b:if cond='data:olderPageUrl'><a class='older-link' expr:href='data:olderPageUrl' expr:title='data:olderPageTitle'>Siguiente</a></b:if>
		</div>
	</b:includable>
    <b:includable id='post' var='post'>
	<b:switch var='data:blog.pageType'>
        <b:case value='index'/><!--index-->

		<!--Soy una entrada en la pagina principal-->

        <b:case value='item'/><!--item-->

        <!--Soy una entrada dentro de las entradas-->

        <b:case value='static_page'/><!--static page-->

        <!--Soy una pagina independiente-->

		<b:case value='archive'/><!--archive-->

		<!--Soy una pagina de archivo-->

	</b:switch>
	</b:includable>
    <b:includable id='postQuickEdit' var='post'><!--Vacío--></b:includable>
    <b:includable id='shareButtons' var='post'>
	<div class='share'>
		<a class='fb' expr:href='"https://www.facebook.com/sharer/sharer.php?u=" + data:post.url' rel='nofollow' target='_blank'/>
		<a class='tt' expr:href='"https://twitter.com/intent/tweet?url=" + data:post.url' rel='nofollow' target='_blank'/>
		<a class='gg' expr:href='"https://plus.google.com/share?url=" + data:post.url' rel='nofollow' target='_blank'/>
		<a class='pt' expr:href='"https://pinterest.com/pin/create/button/?url=" + data:post.url + "&amp;media=" + data:post.firstImageUrl' rel='nofollow' target='_blank'/>
		<a class='tb' expr:href='"https://www.tumblr.com/share/photo?url=" + data:post.firstImageUrl + "&amp;caption=" + data:post.url' rel='nofollow' target='_blank'/>
	</div>
	</b:includable>
    <b:includable id='status-message'><!--Vacío--></b:includable>
    <b:includable id='threaded-comment-form' var='post'><!--Vacío--></b:includable>
    <b:includable id='threaded_comment_js' var='post'><!--Vacío--></b:includable>
    <b:includable id='threaded_comments' var='post'><!--Vacío--></b:includable>
  </b:widget>
</b:section>

</b:if><!-- Fin Error -->

<!-- Google Analytics -->
<b:include data='blog' name='google-analytics'/>
&lt;!--</body>--&gt;&lt;/body&gt;

</html>